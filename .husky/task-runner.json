{
    "tasks": [
        {
            "name": "Format .NET code",
            "group": "pre-commit",
            "command": "dotnet",
            "args": ["format", "--include", "${staged}"],
            "include": ["**/*.cs", "**/*.razor", "**/*.cshtml"],
            "exclude": ["**/GeneratedCode/*.cs"]
        },
        {
            "name": "Prettier",
            "group": "pre-commit",
            "pathMode": "absolute",
            "command": "npx",
            "cwd": "Haly.WebApp/ClientApp",
            "args": ["prettier", "--write", "${staged}"],
            "include": [
                "**/*.js",
                "**/*.ts",
                "**/*.jsx",
                "**/*.tsx",
                "**/*.css",
                "**/*.less",
                "**/*.scss",
                "**/*.html",
                "**/*.json",
                "**/*.md"
            ],
            "exclude": ["**/generated/*"]
        },
        {
            "name": "Eslint",
            "group": "pre-commit",
            "pathMode": "absolute",
            "command": "npx",
            "cwd": "Haly.WebApp/ClientApp",
            "args": ["eslint", "--fix", "--format=pretty", "${staged}"],
            "include": ["**/*.js", "**/*.ts", "**/*.jsx", "**/*.tsx"],
            "exclude": ["**/generated/*", "**/*IntegrationTests.ClientApp/*"]
        }
    ]
}
